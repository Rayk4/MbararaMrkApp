<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dae7ad5c"
    tools:context="com.example.bornittah.mbararamrkapp.Food_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Mbarara Central Market"
        android:textColor="#EC1B1B1A"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="A List of some of the food sold in Mbarara Central Market:"
        android:textColor="#ec1b1a1a"
        android:layout_marginTop="54dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="- Bananas @ banch  at   25000/="
        android:textColor="#EC1B1B1A"
        android:layout_marginTop="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:src="@drawable/bananas"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_centerHorizontal="true" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="- Irish Potatoes @ sack  at  35000/="
        android:textColor="#EC1B1B1A"
        android:layout_marginTop="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:src="@drawable/irishi"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="- Cassava  @  sack at  40000/="
            android:textColor="#EC1B1B1A"
            android:layout_marginTop="400dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView3" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:src="@drawable/caassava"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:text="- Sweet Potatoes @ sack at  30000/="
        android:textColor="#EC1B1B1A"
        android:layout_marginTop="550dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="140dp"
            android:src="@drawable/sweetpotato"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/textView4"
            android:layout_alignLeft="@+id/imageView4"
            android:layout_alignStart="@+id/imageView4"
            android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>
